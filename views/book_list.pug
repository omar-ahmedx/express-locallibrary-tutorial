extends layout

block content
  h1= title

  ul
    - book_list.sort(function(a, b) {let textA = a.title.toUpperCase(); let textB = b.title.toUpperCase(); return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;});
    each book in book_list
      li
        a(href=book.url) #{book.title}
        //-We use book.url to provide the link to the detail record for each book This is a virtual property of the Book model which uses the model instance's _id field to produce a unique URL path.
        |  (#{book.author.name})

    else
      li There are no books.